<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/upper_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/prof_img"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:background="@drawable/ic_launcher" />

        <RelativeLayout
            android:id="@+id/prof_name_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/prof_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXXX XXXXX" />

            <LinearLayout
                android:id="@+id/fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/prof_name" >

                <TextView
                    android:id="@+id/prof_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Favorite team:" />

                <TextView
                    android:id="@+id/prof_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/prof_fav"
                    android:text="XXXXX XXXXX" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottom_Lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upper_lay"
        android:layout_marginTop="40dip" >

        <Button
            android:id="@+id/invite_frnd"
            android:layout_width="240dip"
            android:layout_height="40dip"
            android:layout_centerHorizontal="true"
            android:background="@drawable/allsitelistdesign_top_corner"
            android:drawableRight="@drawable/arrow_right"
            android:paddingRight="5dip"
            android:text="Invite Friends" />

        <Button
            android:id="@+id/view_tracking_list"
            android:layout_width="240dip"
            android:layout_height="40dip"
            android:layout_centerHorizontal="true"
            android:background="@drawable/allsitelistdesign"
            android:drawableRight="@drawable/arrow_right"
            android:paddingRight="5dip"
            android:layout_below="@id/invite_frnd"
            android:text="View Tracking List" />

        <Button
            android:id="@+id/set_fav_team"
            android:layout_width="240dip"
            android:layout_height="40dip"
            android:layout_centerHorizontal="true"
            android:background="@drawable/allsitelistdesign_bottom_corner"
            android:drawableRight="@drawable/arrow_right"
            android:paddingRight="5dip"
            android:text="Set Favorite Team"
            android:layout_below="@id/view_tracking_list" />

        <Button
            android:id="@+id/settings"
            android:layout_width="240dip"
            android:layout_height="40dip"
            android:layout_below="@id/set_fav_team"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dip"
            android:drawableRight="@drawable/arrow_right"
            android:paddingRight="5dip"
            android:background="@drawable/allsitelistdesign_all_corner"
            android:text="Settings" />
    </RelativeLayout>

</RelativeLayout>