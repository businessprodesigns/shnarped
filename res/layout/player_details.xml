<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/upper_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/prof_img"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:background="@drawable/ic_launcher" />

        <RelativeLayout
            android:id="@+id/prof_name_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXXX XXXXX"
                android:textColor="#7e0202" />

            <LinearLayout
                android:id="@+id/position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/team_name" >

                <TextView
                    android:id="@+id/prof_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Position:" />

                <TextView
                    android:id="@+id/prof_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/prof_fav"
                    android:text="XXXXX XXXXX" />
            </LinearLayout>

            <TextView
                android:id="@+id/dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/position"
                android:text="ssssss" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dob"
                android:text="XXXXX XXXXX" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/pound"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignParentRight="true"
        android:background="@drawable/pound" >

        <TextView
            android:id="@+id/no_pounds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="7dip"
            android:text="500"
            android:textColor="#fff"
            android:textSize="8dip"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/devider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/upper_lay"
        android:background="@drawable/divider" />

    <LinearLayout
        android:id="@+id/button_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upper_lay"
        android:layout_marginTop="5dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="1" >

        <Button
            android:id="@+id/track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/track"
            android:text="Track"
            android:textColor="#fff"
            android:textSize="14sp" />

        <Button
            android:id="@+id/stat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_dark"
            android:text="STATS"
            android:textColor="#fff"
            android:textSize="14sp" />

        <Button
            android:id="@+id/twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_dark"
            android:text="TWEETS"
            android:textColor="#fff"
            android:textSize="14sp" />

        <Button
            android:id="@+id/stall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_dark"
            android:text="STALL"
            android:textColor="#fff"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/devider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/button_lay"
        android:background="@drawable/divider" />

</RelativeLayout>